<%- include("partials/header") -%>

<h1>Home</h1>

<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>

    <% const str=post.content; %>
    <% const truncatedStr=str.substring(0,100) + " ..."; %>
    <% const path="/posts/" + post.title; %>
    <p><%= truncatedStr %> <a href="<%= path %>">Read More</a></p>
<% }); %>

